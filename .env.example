# GRAIL-LM Environment Configuration

# ===== Neo4j Configuration =====
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
USE_NEO4J=true

# ===== Ollama/LLM Configuration =====
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3
# Alternative models: llama3.2:3B, mistral, codellama

# ===== GNN Configuration =====
USE_GNN=true
GNN_MODEL_PATH=models/gnn_retriever.pt
GNN_EPOCHS=100

# ===== Data Paths =====
KG_EDGES=data/kg_edges.tsv
KG_NODE_TEXTS=data/node_texts.jsonl
DATA_DIR=data

# ===== API Configuration =====
API_HOST=0.0.0.0
API_PORT=8001

# ===== Retrieval Defaults =====
DEFAULT_TOPK_PATHS=5
DEFAULT_MAX_HOPS=3
DEFAULT_NEIGHBOR_EXPAND=1

# ===== Logging =====
LOG_LEVEL=INFO
